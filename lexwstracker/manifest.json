{
  "manifest_version": 2,

  "name": "Lex/WS Tile Tracker",
  "description": "This extension displays available tiles in Lexulous or Wordscraper",
  "version": "1.1",
  "background": { "scripts": ["background.js"] },
  "page_action": {
    "default_icon": "icon-19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://scrabtourneyasst.herokuapp.com/",
	"tabs"
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
   "content_security_policy": "script-src 'self' https://scrabtourneyasst.herokuapp.com; object-src 'self'"
}
